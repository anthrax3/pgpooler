# shellcheck shell=bash

# ``````````````````````````````````````````````````````````````````````````````
# Function name: module_distributor()
#
# Description:
#   Modules distributor.
#
# Usage:
#   module_distributor
#
# Examples:
#   module_distributor
#

function module_distributor() {

  # shellcheck disable=SC2034
  local _FUNCTION_ID="module_distributor"
  local _STATE=0

  if [[ ${input_array[0]} == "set" ]] ; then

    set_module

  elif [[ ${input_array[0]} == "show" ]] ; then

    show_module

  elif [[ ${input_array[0]} == "attach" ]] ; then

    attach_node

  elif [[ ${input_array[0]} == "detach" ]] ; then

    detach_node

  fi

  return $_STATE

}
